<div class="container">
  <p id="notice"><%= notice %></p>

  <h1 class="bg-light ml-3">Upcoming Events</h1>

  <table class="table table-striped table-bordered table-hover ml-3">
    <thead class="thead-dark">
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Date</th>
        <th>Location</th>
        <th>More</th>
        <th colspan="3">Attend</th>
      </tr>
    </thead>

    <tbody>
      <% @events.order(:date).reverse.each do |event| %>
        <tr>
          <td><%= event.title %></td>
          <td><%= event.description %></td>
          <td><%= event.date.strftime('%b %d %Y') unless event.date.nil? %></td>
          <td><% if !event.date.nil? && event.date < Time.now %>
          Past
          <% else %>
          Upcoming
          <% end %>
          </td>
          <td><%= event.location %></td>
          <td><%= link_to 'Show', event %></td>
          <td>
          <% unless event.attendees.include?(current_user) %>   
          <%= link_to 'Attend', invitation_path(event.id) %>
          <% else %>
          Attended
          <% end %>
          </td>     
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Event', new_event_path, class: "btn text-light bg-success ml-3" %>
  <%= link_to 'See Event Creators', root_path, class: "btn text-light bg-info ml-3" %>

</div>