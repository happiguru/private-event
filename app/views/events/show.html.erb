<div class="container">
  <p id="notice"><%= notice %></p>

  <h1 class="ml-3">Events Statistics</h1>
  <div class="table-responsive-sm">
  <table class="table table-striped table-bordered table-hover ml-3">
    <thead class="thead-dark">
      <tr>
        <th>Event Title</th>
        <th>Event Date</th>
        <th>Event Location</th>
        <th>Event Attendees (<%= @event.attendees.count %>)</th>
        <th colspan="3">Event Description</th>
      </tr>
    </thead>

    <tbody>
        <tr>
          <td><%= @event.title %></td>
          <td><%= @event.date %></td>
          <td><%= @event.location %></td>
          <td>
              <% @event.attendees.each do |attendee| %>
                <li><%= attendee.name %></li>
              <% end %>
          </td>
          <td><%= @event.description %></td>
        </tr>
    </tbody>
  </table>
  </div>

  <%= link_to 'Back To Events List', events_path, class: "btn text-light bg-info ml-3" %>

</div>