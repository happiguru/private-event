<p id="notice"><%= notice %></p>

<h1>Events Created By <%= @user.name %></h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Location</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @user.created_events.each do |event| %>

    <tr>
      <td><%= event.title %></td>
      <td><%= event.date %></td>
      <td><%= event.location %></td>
      <td><%= event.description %></td>
      <td colspan="3"></td>
    </tr>

  <% end %>
  </tbody>

</table>



<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
