<div class="container">
  <p id="notice"><%= notice %></p>

  <h1 class="bg-light ml-3">Events Created By <%= @user.name %></h1>
  <table class="table table-striped table-bordered table-hover ml-3">
    <thead class="thead-dark">
      <tr>
        <th>Event Title</th>
        <th>Event Date</th>
        <th>Event Location</th>
        <th>Event Description</th>
        <th colspan="3">More</th>
      </tr>
    </thead>
    <tbody>
    <% @user.created_events.each do |event| %>
    <tr>
        <p>
        <td><%= event.title %></td>
          <td><%= event.date.strftime('%b %d %Y') unless event.date.nil? %></td>
          <td><%= event.location %></td>
          <td><%= event.description %></td>
          <td><%= link_to 'Show', event %></td>
        </p>
    </tr>
    <% end %>
    </tbody>
    </table>

  <br>

  <h2 class="bg-light ml-3"><%= @user.name %> is Attending to:</h2>
  <table class="table table-striped table-bordered table-hover ml-3">
    <thead class="thead-dark">
      <tr>
        <th>Event Title</th>
        <th>Event Date</th>
        <th>Event Location</th>
        <th>Event Description</th>
        <th colspan="3">More</th>
      </tr>
    </thead>
    <tbody>
      <% @user.attended_events.each do |event| %>
      <tr>
        <p>
        <td><%= event.title %></td>
          <td><%= event.date.strftime('%b %d %Y') unless event.date.nil? %></td>
          <td><%= event.location %></td>
          <td><%= event.description %></td>
          <td><%= link_to 'Show', event %></td>
        </p>
      </tr>
      <% end %>
    </tbody>
    </table>
  <br>

  <%= link_to 'Edit', edit_user_path(@user), class: "btn text-light bg-success ml-3" %>
  <%= link_to 'Back', users_path, class: "btn text-light bg-info ml-3" %>

</div>