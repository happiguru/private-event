<div class="container">
  <p class="alert-success" id="notice"><%= notice %></p>

<h1 class="bg-light pl-3">Event Creators</h1>

<div class="table-responsive-sm">
<table class="table table-striped table-bordered table-hover ml-3">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Username</th>
      <th colspan="3">Event Details</th>
    </tr>
  </thead>

  <tbody>
    <%= render 'users' %>
  </tbody>
</table>
</div>
<br>

<div class="pl-3">
  <% unless logged_in? %>
  <span><%= link_to  'Sign Up', new_user_path, class: "btn text-light bg-success" %></span>
  <span><%= link_to 'Log In', '/login', method: :get, class: "btn text-light bg-success"  %></span>

  <% else %>
  <span><%= link_to 'See All Events', events_path, class: "btn text-light bg-info"  %></span>
  <span><%= link_to 'Create New Event', new_event_path, class: "btn text-light bg-success"  %></span>
  <span><%= link_to 'Log out', '/logout', method: :destroy, class: 'btn text-light bg-danger'  %> </span>

  <% end %>
</div>

</div>