<p id="notice"><%= notice %></p>

<h1>Users</h1>

<% if logged_in? %>
<p><%= current_user.name %></p>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Username</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.username %></td>
        <td><%= link_to 'See Events', user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% unless logged_in? %>
<%= link_to 'Sign Up', new_user_path %>
<%= link_to 'Log In', '/login', method: :get %>

<% else %>
<%= link_to 'Create New Event', new_event_path %><br />
<%= link_to 'Log out', '/logout', method: :destroy %> 

<% end %>
