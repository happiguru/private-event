<div class="container mt-2">
    <div class="row">
        <div class="col-12 col-lg-6">
            <h3 class="bg-light">Login to Event Account </h3>
                <div class="mt-5 mb-3">
                    <%= form_tag '/login' do %>
                        <div class="form-group">
                            <%= label_tag :username%><br />
                            <%= text_field_tag :username %>
                        </div>
                        <div class="form-group">
                            <%= submit_tag "Login", class: "btn bg-primary"%>
                        </div>
                    <%end%>
                </div>
                
                <%= link_to 'Back', users_path, class: "btn text-light bg-info" %>
        </div>
    </div>
</div>