<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvent</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'https://fonts.googleapis.com/css2?family=Inter:wght@600&display=swap', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-light bg-primary mb-5">
    <div class="container">
        <a class="navbar-brand" href="#">Event Booking App</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item active">
              <a class="nav-link text-light" href="#">Home <span class="sr-only">(current)</span></a>
            </li>
            <% unless logged_in? %>
            <li class="nav-item">
              <a class="nav-link text-light" href="/users/new">Sign Up</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light" href="/login">Login</a>
            </li>
            <% else %>
            <li class="nav-item">
              <a class="nav-link text-light" href="/events">Events</a>
            </li>
            <li class="nav-item">
              <%= link_to 'Log out', '/logout', method: :destroy, class: 'nav-link text-light'  %>
            </li>
            <% end %>
          </ul>
        </div>
    </div>
  </nav>
    <%= yield %>
    <footer>
      <div class="container mt-5">
        Stanley & Miguel Collab <%= Time.now.year %>
      </div>
    </footer>
  </body>
</html>
